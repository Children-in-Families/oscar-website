.container
  .row
    .col
      .blog-posts
        - posts = current_site.the_post_type('home-latest-blog-post').the_posts.visible_frontend.decorate
        - posts.each do |post|
          %article.post.post-large
            .post-image
              .owl-carousel.owl-theme{"data-plugin-options" => "{'items':1}"}
                %div
                  .img-thumbnail.d-block
                    %img.img-fluid{:alt => "", :src => "img/blog/blog-image-1.jpg"}/
                %div
                  .img-thumbnail.d-block
                    %img.img-fluid{:alt => "", :src => "img/blog/blog-image-2.jpg"}/
                %div
                  .img-thumbnail.d-block
                    %img.img-fluid{:alt => "", :src => "img/blog/blog-image-3.jpg"}/
            - tweetDate = post.the_field('date').split('-')
            - day = tweetDate[2]
            - month = Date::MONTHNAMES[tweetDate[1].to_i][0..2]
            .post-date
              %span.day
                = day
              %span.month
                = month
            .post-content
            %h2
              = link_to post.the_field('post-title'), post.the_field('post-url')
            - tweetContent = post.the_field('post-content')

            %p
              = tweetContent[0..149]
              [...]
            .post-meta
              %span
                %i.fa.fa-user
                By
                %a{:href => "#"} John Doe
              %span
                %i.fa.fa-tag
                = succeed "," do
                  %a{:href => "#"} Duis
                %a{:href => "#"} News
              %span.d-block.d-sm-inline-block.float-sm-right.mt-3.mt-sm-0
                = link_to 'Read more...', post.the_field('post-url'), class: 'blogReadMore btn-primary'
        %ul.pagination.float-right
          %li.page-item
            %a.page-link{:href => "#"} «
          %li.page-item.active
            %a.page-link{:href => "#"} 1
          %li.page-item
            %a.page-link{:href => "#"} 2
          %li.page-item
            %a.page-link{:href => "#"} 3
          %li.page-item
            %a.page-link{:href => "#"} »
