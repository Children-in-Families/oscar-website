%iframe{ style: 'width: 100%; height: 450px;', allowfullscreen: '', frameborder: '0', src: @post.the_field('contact-map') }
.container
  .row
    .col-lg-6
      #contactSuccess.alert.alert-success.d-none.mt-4
        %strong Success!
        Your message has been sent to us.
      #contactError.alert.alert-danger.d-none.mt-4
        %strong Error!
        There was an error sending your message.
        %span#mailErrorMessage.text-1.mt-2.d-block
      %h2.mb-3.mt-2
        %strong Contact
        Us
      %form#contactForm{:action => "", :method => "POST"}
        .form-row
          .form-group.col-lg-6
            %label Your name *
            %input#name.inputContact.form-control{"data-msg-required" => "Please enter your name.", :maxlength => "100", :name => "name", :required => "", :type => "text", :value => ""}/
          .form-group.col-lg-6
            %label Your email address *
            %input#email.inputContact.form-control{"data-msg-email" => "Please enter a valid email address.", "data-msg-required" => "Please enter your email address.", :maxlength => "100", :name => "email", :required => "", :type => "email", :value => ""}/
        .form-row
          .form-group.col
            %label Subject *
            %input#subject.inputContact.form-control{"data-msg-required" => "Please enter the subject.", :maxlength => "100", :name => "subject", :required => "", :type => "text", :value => ""}/
        .form-row
          .form-group.col
            %label Message *
            %textarea#message.inputContact.form-control{"data-msg-required" => "Please enter your message.", :maxlength => "5000", :name => "message", :required => "", :rows => "10"}
        .form-row
          .form-group.col
            %input#sendMessage.btn.btn-primary.btn-lg{"data-loading-text" => "Loading...", :type => "button", :value => "Send Message"}/
    .col-lg-6
      %h4.heading-primary.mt-4
        = oscar_translation('ទំនាក់ទំនង','Get in')
        %strong
          = oscar_translation('ពួក​យើង','Touch')
      %p
        = @post.the_field('contact-get-in-touch-decription')
      %hr/
      %h4.heading-primary
        = oscar_translation('','The')
        %strong
          = oscar_translation('ការិយាល័យ','Office')
      %ul.list.list-icons.list-icons-style-3.mt-4
        %li
          %i.fa.fa-map-marker
          %strong
            = oscar_translation('ឤស័យដ្ឋាន:','Address:')
          = current_theme.the_field('contact-address')
        %li
          %i.fa.fa-phone
          %strong
            = oscar_translation('ទូរស័ព្ទ:','Phone:')
          = current_theme.the_field('contact-phone')
        %li
          %i.fa.fa-envelope
          %strong
            = oscar_translation('អ៊ីមែល:','Email:')
          = link_to current_theme.the_field('contact-email'), target: "_blank" do
            = current_theme.the_field('contact-email')
      %hr/
      %h4.heading-primary
        = oscar_translation('ម៉ោង','Business')
        %strong
          = oscar_translation('ធ្វើការ','Hours')
      %ul.list.list-icons.list-dark.mt-4
        - @post.the_fields('contact-business-hour').each do |hour|
          %li
            %i.fa.fa-clock-o
            = hour