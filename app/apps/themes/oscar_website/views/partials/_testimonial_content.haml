.container
  .row.pull-left
    .col
      %h2.text-center
        = @post.the_title
%section.parallax.section.section-text-light.section-parallax.section-center.mt-0.mb-0{"data-image-src" => current_site.the_post('testimonials').the_field('testimonial-background-image'), "data-plugin-options" => "{'speed': 1.5}", "data-plugin-parallax" => ""}
  .container
    .row.justify-content-center
      .col-lg-10
        .owl-carousel.owl-theme.nav-bottom.rounded-nav{"data-plugin-options" => "{'items': 1, 'loop': false}"}
          - posts = current_site.the_post_type('home-testimonials').the_posts.visible_frontend.decorate
          - posts.each do |testimonial|
            %div
              .col
                .testimonial.testimonial-style-2.testimonial-with-quotes.mb-0
                  .testimonial-author
                    = image_tag testimonial.the_field('testimonial-image'), class: 'img-fluid rounded-circle'
                    %blockquote.paddingTestimonial
                      %p
                        = raw testimonial.the_content
                    .testimonial-author
                      %p
                        %strong
                          = testimonial.the_field('testimonial-name')
                        %span
                          = testimonial.the_field('testimonial-position')